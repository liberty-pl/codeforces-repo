{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Compile",
            "type": "shell",
            "command": "g++-15",
            "args": [
                "-std=c++17",
                "-O2",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Codeforces: Sync",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "${workspaceFolder}/manager.py",
                "sync"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Codeforces: Archive",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "${workspaceFolder}/manager.py",
                "archive",
                "${input:contestId}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Codeforces: Clean",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "${workspaceFolder}/manager.py",
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Codeforces: Move Files to Current",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "${workspaceFolder}/manager.py",
                "move"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Codeforces: Fix Paths",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "${workspaceFolder}/manager.py",
                "fix"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "contestId",
            "type": "promptString",
            "description": "请输入比赛 ID (例如 1950)",
            "default": ""
        }
    ]
}
